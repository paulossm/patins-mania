<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserHome">

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="match_parent"
        android:layout_height="190dp"

        android:contentDescription="Navegar para operacional"
        android:onClick="navigateOperational"
        app:srcCompat="@drawable/btn_operacional"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:contentDescription="Navegar para administrativo"
        android:onClick="navigateAdministrative"
        app:srcCompat="@drawable/btn_administrativo"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:scaleType="fitCenter"/>
</LinearLayout>